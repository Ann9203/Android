<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
  
    <LinearLayout 
         style="@style/top_title_style">
          
          <!-- 尖括号的布局 -->

          
            <ImageButton
                android:id="@+id/about_us_back"
                android:layout_width="14dp"
                android:layout_height="25.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back" />

         <!-- 车段子布局 -->
         <TextView
             android:text="车段子"
             style="@style/top_title_word_style"/>
 </LinearLayout>
 
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/article_title_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginLeft="15dp"
            android:text="分享名称探访首家电动汽车超市大众速腾 默认Video" 
            android:textSize="20sp" />
        
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal">
         <TextView
            android:id="@+id/article_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2015-10-01"
            android:textSize="15sp" />

        <TextView
           
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="车段子"
            android:textColor="#01AFD1"
            android:textSize="15sp" /> 

        <TextView
            android:id="@+id/article_author_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="某某"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="90dp"
            android:src="@drawable/share_cheduanzi"/>

    </LinearLayout>
    
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="点击关注车段子" 
            android:textSize="15sp" />
    
    <ImageView 
             android:id="@+id/article_picture_id"
             android:layout_width="match_parent" 
             android:layout_height="150dp"
             android:layout_margin="5dp"
             android:layout_gravity="center"
             android:scaleType="centerCrop"
             android:src="@drawable/cheduanzi_tuwen"/>
    <TextView
            android:id="@+id/article_content_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="原来外观方面，新车前脸采用了最新家族式设计风格，前保险杠与前大灯之间的凹槽式衔接十分独特。此外，新车采用了侧面推拉门设计，方便乘客上车。" 
            android:textSize="20sp" />

</LinearLayout>
