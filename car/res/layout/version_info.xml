<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
    <LinearLayout 
           style="@style/top_title_style">
          
          <!-- 尖括号的布局 -->

          
            <ImageButton
                android:id="@+id/version_info_back"
                android:layout_width="14dp"
                android:layout_height="25.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/back" />

         <!-- 车段子 -->
          <TextView
             android:text="车段子"
             style="@style/top_title_word_style"/>
          <TextView
                android:layout_width="14dp"
                android:layout_height="25.5dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>
 </LinearLayout>
 <LinearLayout
                android:id="@+id/version_details_one"
               android:orientation="vertical" 
               style="@style/operation_bar_style">
               
               <RelativeLayout
                  
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">    
               <TextView
                  android:id="@+id/version_details_name_one"
                  style="@style/operation_bar_word_style"
                  android:text="车段子1.1.2"/>
            <ImageView
                  android:id="@+id/mine_order_button"
                  style="@style/operation_bar_button_style"                         
                  android:background="@drawable/product_list_more" />
 
               </RelativeLayout>
               
               
               <TextView
                  android:id="@+id/version_details_time_one"
                  style="@style/operation_bar_word_style"
                  android:text="2015年8月26日 "/>
               
           </LinearLayout>
           <View style="@style/PersonalLine" />
           <LinearLayout
                android:id="@+id/version_details_two"
               android:orientation="vertical" 
               style="@style/operation_bar_style">
               
               <RelativeLayout
                   
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">    
               <TextView
                  android:id="@+id/version_details_name_two"
                  style="@style/operation_bar_word_style"
                  android:text="车段子1.1.0"/>

               
               <ImageView
                  android:id="@+id/mine_order_button"
                  style="@style/operation_bar_button_style"                         
                  android:background="@drawable/product_list_more" />
 
               </RelativeLayout>
               
               
               <TextView
                  android:id="@+id/version_details_time_two"
                  style="@style/operation_bar_word_style"
                  android:text="2015年8月26日 "/>
               
           </LinearLayout>
           <View style="@style/PersonalLine" />
    
    
    

</LinearLayout>
