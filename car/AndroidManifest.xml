<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jczb.car"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.RESTART_PACKAGES" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="com.jczb.car.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light.NoTitleBar">

        <activity
            android:name="com.jczb.car.AppStart"
            android:screenOrientation="portrait">
            
        </activity>
        
        <activity
            android:name="com.jczb.car.ui.Main"
            android:configChanges="keyboardHidden|orientation"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.NoTitleBar" >
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>  
            
        </activity>
        
        <activity
            android:name="com.jczb.car.ui.Home"
            android:label="@string/title_activity_home" >
        </activity>
        
        <activity
            android:name="com.jczb.car.ui.DiscoveryActivity"
            android:label="@string/title_activity_discovery" >
        </activity>

        <!-- 登录页面 -->
        <activity
            android:name="com.jczb.car.ui.LoginActivity"
            android:label="@string/login_str" >
        </activity>
        <activity
            android:name="com.jczb.car.ui.Mine"
            android:label="@string/title_activity_mine" >
             
        </activity>
        <!-- 重置密码 -->
        <activity
            android:name="com.jczb.car.ui.EditPasswordActivity"
            android:label="@string/edit_password" >
        </activity>
        <!-- 我的部落 -->
        <activity
            android:name="com.jczb.car.ui.MyClanActivity"
            android:label="@string/version_info" >
        </activity>
        <!-- 版本信息 -->
        <activity
            android:name="com.jczb.car.ui.VersionInfoActivity"
            android:label="@string/my_clan" >
        </activity>
        <!-- 关于我们 -->
        <activity
            android:name="com.jczb.car.ui.AboutUsActivity"
            android:label="@string/about_us" >
        </activity>
        <!-- 修改昵称 -->
        <activity
            android:name="com.jczb.car.ui.EditNicknameActivity"
            android:label="@string/edit_nickname" >
        </activity>
        <!-- 修改密码 -->
        <activity
            android:name="com.jczb.car.ui.ModifyPasswordActivity"
            android:label="@string/modify_password" >
        </activity>
        <!-- 版本详细信息 -->
        <activity
            android:name="com.jczb.car.ui.VersionDetailsInfo"
            android:label="@string/version_details" >
        </activity>
        
      
        <!-- 发现的搜索结果 -->
        <activity android:name="com.jczb.car.ui.DiscoverSearchActivity" >
        </activity>
        
         <!-- 我的评论 -->
        <activity android:name="com.jczb.car.ui.MyEvaluationActivity" >
        </activity>
         <!-- 车段子图文详情页面 -->
        <activity android:name="com.jczb.car.ui.PictureViewInfoActivity" >
        </activity>
          <!-- 车段子视频详情页面 -->
        <activity android:name="com.jczb.car.ui.VedioInfoActivity" >
        </activity>
        
          <!-- 评论-视频详情页面 -->
        <activity android:name="com.jczb.car.ui.ContentEvaluationActivity" >
        </activity>
        
        
        <!-- 免责声明详情页面 -->
        <activity android:name="com.jczb.car.ui.DeclareActivity" >
        </activity>
         <!-- 注册页面 -->
        <activity android:name="com.jczb.car.ui.RegisterActivity" >
        </activity>
         <!-- 输入搜索关键字页面 -->
        <activity android:name="com.jczb.car.ui.SearchContentActivity" >
        </activity>

        <activity
            android:name="com.jczb.car.ui.ChannelActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="com.jczb.car.ui.SelectPicPopupWindow"
            android:theme="@style/MyDialogStyleBottom" />
    </application>

</manifest>