<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8866ff00"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="设置黑名单号码"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/et_setblacknum_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="请输入电话号码"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <RadioGroup
        android:id="@+id/rg_setblack_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <RadioButton
            android:id="@+id/rb_setblacknum_call"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:layout_weight="1"
            android:text="短信"
            android:textColor="#000000"
             />

        <RadioButton
            android:id="@+id/rb_setblacknum_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="电话" 
             android:layout_weight="1"
             android:textColor="#000000"/>

        <RadioButton
            android:id="@+id/rb_setblacknum_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="全部" 
             android:layout_weight="1"
             android:textColor="#000000"
            />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_setblacknum_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="确认" />

        <Button
            android:id="@+id/bt_setblacknum_cansel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>